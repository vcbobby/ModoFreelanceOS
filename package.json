{
    "name": "modofreelanceos",
    "main": "electron/main.cjs",
    "homepage": "./",
    "private": true,
    "version": "2.0.0",
    "description": "El Sistema Operativo para Freelancers",
    "author": "ModoFreelance",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "test": "vitest",
        "postinstall": "patch-package",
        "test:run": "cross-env NODE_OPTIONS=--require ./test/setup-early.cjs vitest run",
        "test:ui": "vitest --ui",
        "preview": "vite preview",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder --win"
    },
    "dependencies": {
        "@capacitor/android": "^8.0.0",
        "@capacitor/app": "^8.0.0",
        "@capacitor/assets": "^3.0.5",
        "@capacitor/core": "^8.0.0",
        "@capacitor/filesystem": "^8.1.0",
        "@capacitor/local-notifications": "^8.0.0",
        "@capacitor/toast": "^8.0.0",
        "@codetrix-studio/capacitor-google-auth": "^3.4.0-rc.4",
        "@google/genai": "^1.30.0",
        "@google/generative-ai": "^0.24.1",
        "@sentry/react": "^10.38.0",
        "@sentry/vite-plugin": "^4.9.0",
        "@vercel/analytics": "^1.6.1",
        "browser-image-compression": "^2.0.2",
        "electron-is-dev": "^3.0.1",
        "firebase": "^12.6.0",
        "framer-motion": "^12.27.0",
        "html2pdf.js": "^0.12.1",
        "lucide-react": "^0.555.0",
        "pdfjs-dist": "^5.4.449",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-markdown": "^10.1.0",
        "react-qr-code": "^2.0.18"
    },
    "devDependencies": {
        "@capacitor/cli": "^8.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.3.1",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-react": "^5.0.0",
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "jsdom": "^28.0.0",
        "parse5": "6.0.1",
        "patch-package": "^8.0.1",
        "typescript": "~5.8.2",
        "vite": "^6.4.1",
        "vitest": "^1.6.1",
        "wait-on": "^9.0.3"
    },
    "overrides": {
        "parse5": "6.0.1"
    },
    "build": {
        "appId": "com.modofreelanceos.app",
        "productName": "ModoFreelanceOS",
        "copyright": "Copyright Â© 2025",
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis",
            "icon": "build/favicon.ico"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}
