{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@views/*": ["./src/views/*"],
            "@services/*": ["./src/services/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@utils/*": ["./src/utils/*"],
            "@config/*": ["./src/config/*"],
            "@types/*": ["./src/types/*"],
            "@context/*": ["./src/context/*"]
        },
        "jsx": "react-jsx",
        "allowJs": true
    }
}
